<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="box is-one-quarter has-text-centered has-text-link">
        <div class="form">
          <h2 class="is-size-2 title font-effect-anaglyph">sign up</h2>

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource%>

          <div class="control">
            <p>Profile picture</p>
            <%= f.file_field :images, multiple: true %>
          </div>
          <p>Name</p>


          <div class="columns">
            <div class="column">
              <div class="field">
                <%= f.text_field :firstname, autofocus: true, placeholder: "First Name", class: "input" %>
              </div>
            </div>
            <div class="column">
              <div class="field">
                <%= f.text_field :lastname, autofocus: true, placeholder: "Last Name", class: "input" %>
              </div>
            </div>
          </div>

          <p>Birthday</p>
          <div class="field">
            <%= f.date_select :dob, {:order => [:day, :month, :year], :start_year => Date.today.year - 18, end_year: Date.today.year - 100} %>
          </div>


          <div class="field">
            <p>Please write some things about yourself.</p>
            <%= f.text_area :bio, autofocus: true, placeholder: "Bio", class: "input" %>
          </div>

          <div class="field">
            <%= f.text_field :username, autofocus: true, placeholder: "Username", class: "input" %>
          </div>

          <div class="field">
            <%= f.select :gender, options_for_select([["Gender", ""], "Male", "Female"]), :class => 'input' %>
          </div>

          <div class="field">
            <%= f.email_field :email, autofocus: true, placeholder: "Email", class: "input" %>
          </div>

          <div class="field">
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %>
              characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, placeholder: "Password", class: "input" %>
          </div>

          <div class="field">
            <%= f.password_field :password_confirmation, placeholder: "Confirm Password", class: "input" %>
          </div>

          <p><input type="checkbox" required name="cookies"> If you agree to our use of cookies, <br> please tick this
            box
            and continue.
          </p>
          <br>
          <div class="actions">
            <%= f.submit "Sign up", class:"button is-primary" %>
          </div>
          <% end %>
          <br>

          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</section>
