<section class="section">
  <div class="container">
    <div class="columns is-centered is-vcentered">
      <div class="box is-one-quarter has-text-centered">
        <div class="form">
          <h2 class="is-size-2 title font-effect-anaglyph">log in</h2>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

            <div class="field">
              <%= f.email_field :email, autofocus: true, placeholder: "Email", class: "input" %>
            </div>

            <div class="field">
              <%= f.password_field :password, placeholder: "Password", class: "input"  %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="field">
                <%= f.check_box :remember_me, class:"checkbox" %>
                <%= f.label :remember_me %>
              </div>
            <% end %>

            <div class="actions">
              <%= f.submit "Log in", class:"button is-primary" %>
            </div>
          <% end %>
          <br>
          <%= render "devise/shared/links" %>
          </div>
      </div>
    </div>
  </div>
</section>
